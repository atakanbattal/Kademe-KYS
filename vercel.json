{
  "version": 2,
  "builds": [
    {
      "src": "src/backend/dist/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/src/backend/dist/index.js"
    },
    {
      "src": "/health",
      "dest": "/src/backend/dist/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "src/backend/dist/index.js": {
      "maxDuration": 30
    }
  }
} 